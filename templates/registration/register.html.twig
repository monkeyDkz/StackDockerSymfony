{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-100 text-gray-900 flex justify-center sm:p-10">
    <div class="max-w-screen-xl m-0 bg-white shadow sm:rounded-lg flex justify-center flex-1">
        <div class="lg:w-1/2 xl:w-5/12 p-6 sm:p-12 flex flex-col">
            <div class="w-32 h-32 mx-auto flex flex-col items-center justify-center">
                <img src="https://www.eemi.com/wp-content/themes/eemi/assets/imgs/logo-eemi.svg" alt="logo"
                    class="w-32 h-32 mx-auto" />
                <p class="text-2xl text-center font-bold">Ofcourse</p>
            </div>
            <div class="mt-12 flex-1 flex flex-col items-center">
                <h1 class="text-2xl xl:text-3xl font-extrabold">
                    Inscription
                </h1>
                <div class="w-full flex-1 mt-8">
                    <div class="mx-auto max-w-xs">
                        {{ form_start(registrationForm, {'attr': {'class': 'space-y-4'}}) }}
                            <div>
                                {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'sr-only'}}) }}
                                <div class="relative">
                                    {{ form_widget(registrationForm.email, {
                                        'attr': {
                                            'class': 'w-full px-8 py-4 rounded-lg font-medium bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white',
                                            'placeholder': 'Votre email'
                                        }
                                    }) }}
                                    <span class="absolute inset-y-0 end-0 grid place-content-center px-4">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="size-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
                                        </svg>
                                    </span>
                                </div>
                            </div>

                            <div>
                                {{ form_label(registrationForm.firstname, 'Prénom', {'label_attr': {'class': 'sr-only'}}) }}
                                <div class="relative">
                                    {{ form_widget(registrationForm.firstname, {
                                        'attr': {
                                            'class': 'w-full px-8 py-4 rounded-lg font-medium bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white',
                                            'placeholder': 'Votre prénom'
                                        }
                                    }) }}
                                </div>
                            </div>

                            <div>
                                {{ form_label(registrationForm.lastname, 'Nom', {'label_attr': {'class': 'sr-only'}}) }}
                                <div class="relative">
                                    {{ form_widget(registrationForm.lastname, {
                                        'attr': {
                                            'class': 'w-full px-8 py-4 rounded-lg font-medium bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white',
                                            'placeholder': 'Votre nom'
                                        }
                                    }) }}
                                </div>
                            </div>

                            <div>
                                {{ form_label(registrationForm.plainPassword.first, 'Mot de passe', {'label_attr': {'class': 'sr-only'}}) }}
                                <div class="relative">
                                    {{ form_widget(registrationForm.plainPassword.first, {
                                        'attr': {
                                            'class': 'w-full px-8 py-4 rounded-lg font-medium bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white',
                                            'placeholder': 'Votre mot de passe'
                                        }
                                    }) }}
                                </div>
                            </div>

                            <div>
                                {{ form_label(registrationForm.plainPassword.second, 'Confirmer le mot de passe', {'label_attr': {'class': 'sr-only'}}) }}
                                <div class="relative">
                                    {{ form_widget(registrationForm.plainPassword.second, {
                                        'attr': {
                                            'class': 'w-full px-8 py-4 rounded-lg font-medium bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white',
                                            'placeholder': 'Confirmez votre mot de passe'
                                        }
                                    }) }}
                                </div>
                            </div>

                            <button type="submit" class="mt-5 tracking-wide font-semibold bg-indigo-500 text-gray-100 w-full py-4 rounded-lg hover:bg-indigo-700 transition-all duration-300 ease-in-out flex items-center justify-center focus:shadow-outline focus:outline-none">
                                <svg class="w-6 h-6 -ml-2" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M16 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2" />
                                    <circle cx="8.5" cy="7" r="4" />
                                    <path d="M20 8v6M23 11h-6" />
                                </svg>
                                <span class="ml-3">S'inscrire</span>
                            </button>
                        {{ form_end(registrationForm) }}

                        <div class="mt-6 text-center">
                            <a href="{{ path('app_login') }}" class="text-sm font-medium text-indigo-600 hover:text-indigo-500">
                                Déjà inscrit ? Connectez-vous
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="flex-1 bg-indigo-100 text-center hidden lg:flex">
            <div class="m-12 xl:m-16 w-full bg-contain bg-center bg-no-repeat"
                style="background-image: url('https://storage.googleapis.com/devitary-image-host.appspot.com/15848031292911696601-undraw_designer_life_w96d.svg');">
            </div>
        </div>
    </div>
</div>
{% endblock %}